<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0C14"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="#222"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#C6C5C4"
        android:textColorHint="#555"
        android:textColorLink="#555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="#222"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#C6C5C4"
        android:textColorHint="#555"
        android:textColorLink="#555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <Button
        android:id="@+id/btnOpenWindow"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="#1bcf5c"
        android:backgroundTint="#1bcf5c"
        android:text="Iniciar sesiÃ²n"
        android:textAllCaps="false"
        android:textColorHighlight="#1bcf5c"
        android:textColorLink="#1bcf5c"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

    <Button
        android:id="@+id/btnOpenGoogle"
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:backgroundTint="#fff"
        android:drawableStart="@drawable/googleg_standard_color_18"
        android:paddingLeft="40dp"
        android:paddingRight="60dp"
        android:text="Continuar con Google"
        android:textAllCaps="false"
        android:textColorHighlight="#1bcf5c"
        android:textColorLink="#1bcf5c"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenWindow" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="160dp"
        android:fontFamily="sans-serif"
        android:text="Acceso"
        android:textColor="#C6C5C4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>